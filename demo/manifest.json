{
    "name": "Willow Demo",
    "description": "Tracking + Side Panel",
    "version": "0.1",
    "manifest_version": 2,
    "permissions": ["storage", "tabs", "history"],
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["sidePanel_injector.js"],
          "run_at": "document_end",
          "match_about_blank": true
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "side_panel.html",
        "side_panel.css",
        "side_panel.js",
        "willowIcon_50x50.jpeg"
    ]
}