{
    "name": "Willow Demo",
    "description": "Tracking + Side Panel",
    "version": "0.1",
    "manifest_version": 2,
    "permissions": ["storage", "tabs", "history"],
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["SidePanel.js"],
          "run_at": "document_end",
          "match_about_blank": true
        },
        {
            "matches": ["<all_urls>"],
            "js": ["cytoscape.min.js"],
            "run_at": "document_end",
            "match_about_blank": true
        },
        {
            "matches": ["<all_urls>"],
            "js": ["graphDrawer.js"],
            "run_at": "document_end",
            "match_about_blank": true
        }
    ],
    "background": {
        "scripts": ["cytoscape.min.js", 
                    "background.js", 
                    "SyncBroadcaster.js",
                    "SidePanel_background.js"], 
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "50": "images/willowIcon_50x50.png"
        }
    },
    "web_accessible_resources": [
        "side_panel.html",
        "side_panel.css",
        "side_panel.js",
        "willowIcon_50x50.jpeg"
    ]
}